@using CheeseMVC.Models
@{
}

<h1>My Cheeses</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>
<p><a asp-controller="Cheese" asp-action="Remove">Remove Cheeses</a></p>

@if (ViewBag.Cheeses.Count == 0)
{
    <p>No cheeses yet!</p>
}

<ul>
    @foreach (Cheese cheese in ViewBag.cheeses)
    {
        <li><strong>@cheese.Name: </strong><em>@cheese.Description</em>
        (<a asp-controller="Cheese"
            asp-action="RemoveSingleCheese"
            asp-route-cheeseName="@cheese.Name">delete</a>)
        </li>
    }
</ul>
